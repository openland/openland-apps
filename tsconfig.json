{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "es5",
      "es6",
      "dom",
      // "es2015.core",
      // "es2015.collection",
      // "es2015.generator",
      // "es2015.iterable",
      // "es2015.promise",
      // "es2015.proxy",
      // "es2015.reflect",
      // "es2015.symbol",
      // "es2015.symbol.wellknown",
      "esnext.asynciterable"
    ],
    "sourceMap": false,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "lib/"
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "files": [
    "./src/typings.d.ts"
  ],
  "include": [
    "./src/"
  ]
}