{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "es6",
    "target": "es2015",
    "lib": [
      "es5",
      "es6",
      "dom",
      // "es2015.core",
      // "es2015.collection",
      // "es2015.generator",
      // "es2015.iterable",
      // "es2015.promise",
      // "es2015.proxy",
      // "es2015.reflect",
      // "es2015.symbol",
      // "es2015.symbol.wellknown",
      "esnext.asynciterable"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "env-config.js"
  ]
}