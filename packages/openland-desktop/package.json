{
    "name": "openland-desktop",
    "version": "1.0.1",
    "main": "src/main.js",
    "scripts": {
        "dev": "./node_modules/.bin/electron ./src/dev.js",
        "build": "electron-builder --dir",
        "release": "electron-builder --platform all --publish always",
        "bundle": "electron-builder"
    },
    "build": {
        "appId": "com.openland.mac",
        "productName": "Openland",
        "directories": {
            "buildResources": "assets"
        },
        "publish": {
            "provider": "spaces",
            "name": "openland-updates",
            "region": "sfo2"
        }
    },
    "devDependencies": {
        "electron": "^4.0.0",
        "electron-builder": "^20.38.4"
    },
    "dependencies": {
        "electron-updater": "^4.0.6",
        "electron-window-state": "^5.0.3"
    }
}