{
    "name": "Openland",
    "version": "2.0.5",
    "main": "src/main.js",
    "scripts": {
        "dev": "./node_modules/.bin/electron ./src/dev.js"
    },
    "build": {
        "appId": "com.openland.mac",
        "productName": "Openland",
        "directories": {
            "buildResources": "assets"
        },
        "publish": {
            "provider": "spaces",
            "name": "openland-updates",
            "region": "sfo2"
        },
        "mac": {
            "identity": "DATA MAKES PERFECT INC. (ATWUYU6747)",
            "target": [
                { "target": "dmg" },
                { "target": "zip" }
            ],
            "hardenedRuntime": true,
            "entitlements": "Info.plist",
            "entitlementsInherit": "Info.plist",
            "extendInfo": {
                "NSMicrophoneUsageDescription": "Microphone will be used for Openland video chat and voice calls.",
                "NSCameraUsageDescription": "Camera will be used for Openland video chat and voice calls."
            }
        },
        "linux": {
            "target": "appimage"
        },
        "win": {
            "target": "nsis",
            "sign": "./signing/win-sign.js"
        },
        "afterSign": "./signing/mac-notarize.js"
    },
    "devDependencies": {
        "electron": "8.2.3",
        "electron-builder": "22.5.1"
    },
    "dependencies": {
        "electron-notarize": "1.0.0",
        "electron-updater": "4.3.1",
        "electron-window-state": "5.0.3"
    }
}
