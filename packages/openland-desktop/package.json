{
    "name": "Openland",
    "version": "1.1.1",
    "main": "src/main.js",
    "scripts": {
        "dev": "./node_modules/.bin/electron ./src/dev.js",
        "build": "electron-builder --dir",
        "release": "electron-builder --platform all --publish always",
        "bundle": "electron-builder"
    },
    "build": {
        "appId": "com.openland.mac",
        "productName": "Openland",
        "directories": {
            "buildResources": "assets"
        },
        "publish": {
            "provider": "spaces",
            "name": "openland-updates",
            "region": "sfo2"
        },
        "mac": {
            "identity": "DATA MAKES PERFECT INC. (ATWUYU6747)",
            "target": "dmg"
        },
        "linux": {
            "target": "appimage"
        },
        "win": {
            "target": "nsis",
            "sign": "./signing/win-sign.js"
        }
    },
    "devDependencies": {
        "electron": "7.1.2",
        "electron-builder": "21.2.0"
    },
    "dependencies": {
        "electron-updater": "4.2.0",
        "electron-window-state": "5.0.3"
    }
}